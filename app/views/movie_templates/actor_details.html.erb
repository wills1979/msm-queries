<h1>
  Actor #<%=@actor.id%> details
</h1>

<a href="/directors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor.bio %>

  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src=<%=@actor.image%> style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @actor.created_at %>

  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @actor.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tbody>
    <tr>
      <th>
        Title
      </th>

      <th>
        Year
      </th>

      <th>
        Director
      </th>

      <th>
        Character name
      </th>

      <th>
      </th>

    </tr>

  <% @filmography.each do |a_character| %>
  <tr>
  <% related_movie = Movie.where({ :id => a_character.movie_id }).at(0) %>
    <td>
      <%= related_movie.title %>
    </td>

    <td>
      <%= related_movie.year %>
    </td>

    <td>
      <%= Director.where({ :id => Movie.where({ :id => a_character.movie_id }).at(0).director_id }).at(0).name %>
    </td>

    <td>
      <%= a_character.name %>
    </td>

    <td>
      <a href="/movies/<%= related_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
